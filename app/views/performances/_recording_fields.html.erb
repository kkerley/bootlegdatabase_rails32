<div class="fields">
	<div class="add_venue_fields">
		<h3>Recording</h3>
		<p>
			<%= f.label :taper_name %><br />
			<%= f.text_field :taper_name %>
		</p>
		
		<p>
			<%= f.label :recording_format %><br />
	    	<%= f.select :recording_format, {"Audio" => "audio", "Audio Remaster" => "audio_remaster", "Video" => "video", "Video Remaster" => "video_remaster"} %>
		</p>	  
		
		<p>
			<%= f.label :lineage %><br />
			<%= f.text_area :lineage, :rows => 2 %>
		</p>
		<p>
			<%= f.label :notes %><br />
			<%= f.text_area :notes, :rows => 5 %>
		</p>
		<p>
			<%= f.label :link %><br />
			<%= f.text_field :link %>
		</p>
	</div>
		<p class="extra_small remove_fields">
			<%= image_tag 'icons/delete.png', :align => 'absmiddle', :style => 'background-color: #fff; border: none; padding: 0;' %>
			<%= link_to_remove_fields "Remove recording", f %>
		</p>
</div>	
