<% form_for(@address) do |f| %>
  <%= f.error_messages %>
 
	  <p><%= f.label :street %><br />
	    <%= f.text_field :street %>
	  </p>
	  <p><%= f.label :city %><br />
	    <%= f.text_field :city %>
	  </p>
	  <p><%= f.label :state, "State/Province" %><br />
	    <%= f.text_field :state %>
	  </p>
	  <p><%= f.label :zip %><br />
	    <%= f.text_field :zip %>
	  </p>
	  <p><%= f.label :country %><br />	    
	    <%= f.text_field :country %>
	  </p>	  
	  
	  <p><%= f.label :description %><br />
		<%= f.text_area :description, :rows => 8 %>
	  </p>
	  <%= render 'layouts/textile_call_out' %>
	  
	  
	  <p class="headline">VENUES</p>
	  <p>Add one (or more) venues at this address.<br />
	  <strong>If the venue already exists, do not add it here.</strong></p>
	  <% f.fields_for :venues do |builder| %>
	  	<%= render 'venue_fields', :f => builder %>
	  <% end %>
	  <p class="bold add">
	  	<%= image_tag 'icons/add.png', :align => 'absmiddle', :style => 'background-color: #fff; border: none; padding: 0;' %>
		<%= link_to_add_fields "Add a venue", f, :venues %>
	  </p>
	  
	  
	  <p class="submit_btn">
	    <%= f.submit 'Submit' %>
	  </p>
  
<% end %>