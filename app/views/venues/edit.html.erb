<% content_for :title, "Editing details for " + @venue.name %>

<div id="title">
	<div class="cell">
		<h1>Editing <%= @venue.name %></h1>
	</div>
</div>


<div id="subtitle">
	<div class="cell">
		<h2>
			<% if @venue.address.blank? %>
				No address listed
			<% else %>
				<%= link_to @venue.address.usable, @venue.address %>
			<% end %>
		</h2>
	</div>
</div>
<div id="content">
	<div id="left-col">
		<p class="headline">Information</p>
		<div class="padding">

			<%= render 'form' %>
			
		</div>
	</div>	


	<div id="right-col">
		<p class="headline">Controls</p>
		<div id="controls">        	
			<div class="padding">
				<p>
					<%= image_tag 'icons/cancel.png', :align => 'absmiddle' %>
					<%= link_to 'Cancel', venues_path %>
				</p>
			</div>
		</div>
	</div>
</div>