<% content_for :title, "All Users" %>

<div id="title">
	<div class="cell">
		<h1>Users</h1>
	</div>
</div>


<div id="subtitle">
	<div class="cell">
		<h2>Master list of all site users</h2>
	</div>
</div>
<div id="content">
	<div id="left-col">
		<div class="padding">
			<%= will_paginate @users %>			
			<% @users.each do |user| %>
				<div class="performance_listing">
					<p>
						<%= image_tag user.photo.url(:avatar), :align => 'middle', :style => 'margin: .3em 1em 1em 0;' %>
					</p>
					<div class="performance_text">
						<strong><%= link_to user.login, user %></strong>
					</div>
					<span class="details dark">
						<%= user.performances.count %> performances attended<br />
						<%= user.recordings.count %> recordings collected<br />
					
					    <% if current_user && current_user.admin? %>
							[ <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %> ]
						<% end %>
					</span>
				</div>
			<% end %>
			<%= will_paginate @users %>	
		</div>
	</div>
</div>