<% content_for :title, "New Song" %>

<div id="title">
	<div class="cell">
		<h1>Create a new song</h1>
	</div>
</div>


<div id="subtitle">
	<div class="cell">
		<h2><%= link_to 'songs', songs_path %></h2>
	</div>
</div>
<div id="content">
	<div id="left-col">
		<p class="headline">Information</p>
		<div class="padding">

			<%= render 'form' %>

		</div>
	</div>	


	<div id="right-col">
			
		<p class="headline">Controls</p>
		<div id="controls">        	
			<div class="padding">
				<p>
					<%= image_tag 'icons/cancel.png', :align => 'absmiddle' %>
					<%= link_to 'Cancel', @song %> these changes
				</p>
			</div>
		</div>
	</div>
</div>