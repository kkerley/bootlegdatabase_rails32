<% form_for(@song) do |f| %>
	<%= f.error_messages %>
	
	<p><%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>
	<p><%= f.label :band_id %><br />
		<%= f.select :band_id, Band.find(:all, :order => "name").collect{ |b| [(b.name), b.id]}%>
	</p>
	<p><%= f.label :description, "Notes" %><br />
		<%= f.text_area :description, :rows => 8 %>
	</p>
	
		<%= render 'layouts/textile_call_out' %>
	    
	<p>
		<%= f.submit 'Submit' %>
	</p>
  
<% end %>