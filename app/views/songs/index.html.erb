<% content_for :title, "Master List of Songs" %>

<div id="title">
	<div class="cell">
    	<h1>Songs</h1>
    </div>
</div>

<div id="subtitle">
	<div class="cell">
		<h2>Master List of Songs</h2>
	</div>
</div>



<div id="content">
	<div id="left-col">
		<p class="headline"><%= link_to 'Add a new song', new_song_path %> to the site!</p>
		<div class="padding">
			<%= will_paginate @songs %>
			<% @songs.each do |song| %>
			<div class="performance_listing">
				<p>
					<%= image_tag song.band.photo.url(:avatar), :align => 'middle', :style => 'margin: .3em 1em 1em 0;' %>
				</p>	
					
					<div class="performance_text">
						<strong><%= link_to song.name, song %></strong>  
					    
						<span class="details dark">
						<%= link_to song.band.name, song.band %> | Played live <strong><%= song.performances.count %></strong> times :: 
							[ <%= link_to 'Edit', edit_song_path(song) %>
						    <% if current_user %>
								<% if current_user.admin? %>
									| <strong><%= link_to 'Destroy', song, :confirm => 'Are you sure?', :method => :delete %></strong>
								<% end %>
							<% end %> ]
						</span>
					</div>
			</div>
			<% end %>
			<%= will_paginate @songs %>
		</div>
	</div>
	
	<div id="right-col">
		<p class="headline">Controls</p>
        <div id="controls">
            <div class="padding">
				<%= render 'layouts/master_view_controls' %>
			</div>
		</div>
	</div>
</div>