<% form_for @tour, :html => { :multipart => true } do |f| %>
	<%= f.error_messages %>
	
		<p><%= f.label :name %><br />
			<%= f.text_field :name %>
		</p>
		<p><%= f.label :band_id %><br />
			<%= f.select :band_id, Band.find(:all, :order => "name").collect{ |b| [(b.name), b.id]}%>
		</p>
		<p><%= f.label :photo, "Add a photo" %><br />
			<%= f.file_field :photo %>
		</p>
		<p><%= f.label :description, "Notes" %><br />
			<%= f.text_area :description, :rows => 15 %>
		</p>
	  
	  	<%= render 'layouts/textile_call_out' %>
	  
		<p>
			<%= f.submit 'Submit' %>
		</p>
	
<% end %>