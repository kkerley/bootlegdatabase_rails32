<div id="title">
	<div class="cell">
    	<h1>Blog</h1>
    </div>
</div>

<div id="subtitle">
	<div class="cell">
		<h2>New post</h2>
	</div>
</div>


<div id="content">
	<div id="left-col">
		<div class="padding">
			<%= render 'form' %>
		</div>
	</div>
	
	<div id="right-col">
		<p class="headline">Controls</p>
        <div id="controls">
            <div class="padding">
				<p>
					<%= image_tag 'icons/cancel.png', :align => 'absmiddle' %>
					<%= link_to 'Cancel', posts_path %> this post
				</p>
			</div>
		</div>
	</div>
</div>